{
  // ============================================================================
  // TypeScript Configuration for Trading Alerts SaaS V7
  // ============================================================================
  // IMPORTANT: STRICT MODE ENABLED - All type safety features are ON
  // This is intentional and MANDATORY for production code quality
  // Changes here affect CI/CD pipeline - update shift-left-testing docs if modified

  "compilerOptions": {
    // ==========================================================================
    // Language and Environment
    // ==========================================================================
    "target": "ES2020", // Compile to ES2020 JavaScript
    "lib": [
      "ES2020", // Include ES2020 standard library
      "DOM", // Browser DOM APIs
      "DOM.Iterable" // Iterable DOM collections
    ],
    "jsx": "preserve", // Keep JSX as-is for Next.js to handle
    "module": "esnext", // Use latest ES modules

    // ==========================================================================
    // Module Resolution (Path Aliases)
    // ==========================================================================
    "moduleResolution": "bundler", // Modern bundler resolution
    "resolveJsonModule": true, // Allow importing JSON files
    "allowImportingTsExtensions": false, // Don't allow .ts/.tsx in imports
    "baseUrl": ".", // Base directory for module resolution
    "paths": {
      "@/*": ["./*"] // @ alias maps to project root
    },

    // ==========================================================================
    // Type Checking - STRICT MODE (CRITICAL QUALITY GATES)
    // ==========================================================================
    // MASTER SWITCH: Enables all strict type checking below
    "strict": true,

    // CRITICAL: Forbids implicit 'any' - all variables must be typed
    // Impact: Catches type errors at compile time instead of runtime
    "noImplicitAny": true,

    // CRITICAL: Enforces null/undefined checks
    // Impact: Prevents "Cannot read property of undefined" errors
    // Example: Must use user?.name instead of user.name
    "strictNullChecks": true,

    // CRITICAL: Strict checking of function types
    // Impact: Function parameters and return types must match exactly
    "strictFunctionTypes": true,

    // CRITICAL: Strict checking of bind/call/apply
    // Impact: Ensures 'this' context is typed correctly
    "strictBindCallApply": true,

    // CRITICAL: Class properties must be initialized
    // Impact: Prevents undefined class properties
    "strictPropertyInitialization": true,

    // CRITICAL: 'this' must have explicit type
    // Impact: Prevents errors from unknown 'this' context
    "noImplicitThis": true,

    // CRITICAL: Adds "use strict" to all JavaScript output
    // Impact: Prevents common JavaScript gotchas
    "alwaysStrict": true,

    // IMPORTANT: Prevents unused local variables
    // Impact: Cleaner code, no dead code
    "noUnusedLocals": true,

    // IMPORTANT: Prevents unused function parameters
    // Impact: Cleaner code, prefix with _ if intentionally unused
    "noUnusedParameters": true,

    // CRITICAL: All code paths must return a value
    // Impact: Prevents accidental undefined returns
    "noImplicitReturns": true,

    // IMPORTANT: Switch cases must break or return
    // Impact: Prevents fall-through bugs
    "noFallthroughCasesInSwitch": true,

    // CRITICAL: Index access returns T | undefined
    // Impact: Must check array[i] before using (prevents out-of-bounds errors)
    "noUncheckedIndexedAccess": true,

    // IMPORTANT: Override methods must use 'override' keyword
    // Impact: Prevents accidental method shadowing
    "noImplicitOverride": true,

    // CRITICAL: Must use bracket notation for dynamic property access
    // Impact: obj['prop'] instead of obj.prop for computed properties
    "noPropertyAccessFromIndexSignature": true,

    // ==========================================================================
    // Emit (Output Configuration)
    // ==========================================================================
    "declaration": true, // Generate .d.ts type definition files
    "declarationMap": true, // Generate sourcemaps for .d.ts files
    "sourceMap": true, // Generate .js.map for debugging
    "removeComments": false, // Keep comments in output (helpful for debugging)
    "noEmit": true, // Don't emit JS (Next.js handles compilation)

    // ==========================================================================
    // Interop Constraints (Module System Compatibility)
    // ==========================================================================
    "isolatedModules": true, // Each file must be standalone (required for Babel/SWC)
    "allowSyntheticDefaultImports": true, // Allow 'import React from "react"'
    "esModuleInterop": true, // Enable ES module interoperability
    "forceConsistentCasingInFileNames": true, // Enforce consistent file name casing

    // ==========================================================================
    // Type Checking Performance
    // ==========================================================================
    "skipLibCheck": true, // Skip type checking of .d.ts files (faster builds)

    // ==========================================================================
    // Build Performance
    // ==========================================================================
    "incremental": true, // Enable incremental compilation (faster rebuilds)

    // ==========================================================================
    // Next.js Specific Configuration
    // ==========================================================================
    "plugins": [
      {
        "name": "next" // Next.js TypeScript plugin
      }
    ],
    "allowJs": true // Allow importing .js files
  },

  // ============================================================================
  // Files to Include in Type Checking
  // ============================================================================
  "include": [
    "next-env.d.ts", // Next.js type definitions
    "**/*.ts", // All TypeScript files
    "**/*.tsx", // All TypeScript React files
    ".next/types/**/*.ts" // Generated Next.js types
  ],

  // ============================================================================
  // Files to Exclude from Type Checking
  // ============================================================================
  "exclude": [
    "node_modules", // Dependencies (huge, pre-compiled)
    ".next", // Build output
    "out", // Export output
    "dist", // Distribution output
    "build", // Build artifacts
    "seed-code", // Seed/template code
    "**/*.test.ts", // Test files (checked separately by Jest)
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "__tests__" // Test directories
  ]
}
